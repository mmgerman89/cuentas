

<%= form_for(@home, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label "Nombre", class: "form-group" %>
  </div>
  <div class="control-label col-sm-8">
    <%= f.text_field :name, class: "form-control", placeholder: "Nombre", autofocus: true %>
  </div>
  <div class="control-label col-sm-2">
    <%= f.label "Dirección", class: "form-group" %>
  </div>
  <div class="control-label col-sm-8">
    <%= f.text_field :address, class: "form-control", placeholder: "Dirección" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-2">
    <%= f.submit "Guardar", class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
[ <%= link_to "Cancelar y volver a mis casas", homes_path %> ]
</div>
